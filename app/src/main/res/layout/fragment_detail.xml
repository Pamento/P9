<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".ui.fragments.DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detail_1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/detail_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/detail_prop_available"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_since"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/since"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/detail_date_init"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_date_init"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/detail_date_init"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/detail_2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_1_layout">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detail_img_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detail_3_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_2_layout">

            <TextView
                android:id="@+id/detail_surface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_surface_integer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_bathroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_rooms"
                app:layout_constraintStart_toStartOf="@+id/detail_surface"
                app:layout_constraintTop_toBottomOf="@+id/detail_surface" />

            <TextView
                android:id="@+id/detail_rooms_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_bathroom"
                app:layout_constraintStart_toStartOf="@+id/detail_bathroom"
                app:layout_constraintTop_toBottomOf="@+id/detail_bathroom" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/detail_4_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_description_title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_description" />

            <TextView
                android:id="@+id/detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="The person who is in charge of managing land and buildings for a company or in a particular area, including activities such as keeping buildings in good condition and organizing the renting of property." />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_5_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:paddingHorizontal="48dp">

            <TextView
                android:id="@+id/detail_address_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="740 Park Avenue" />

            <TextView
                android:id="@+id/detail_address_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Apt 6/7 A" />

            <TextView
                android:id="@+id/detail_address_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Quarter" />

            <TextView
                android:id="@+id/detail_address_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="New York" />

            <TextView
                android:id="@+id/detail_address_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="NY 10021" />

            <TextView
                android:id="@+id/detail_address_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="United States" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_6_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detail_small_map"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:contentDescription="@string/img_description_small_static_map"
                tools:src="@tools:sample/avatars" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_7_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_b"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail_near_by" />

            <ListView
                android:id="@+id/detail_amenities_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_b"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_8_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_agent_title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_managed_by" />

            <TextView
                android:id="@+id/detail_agent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                tools:text="Mark Donald" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>